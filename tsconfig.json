{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/lib",
    "target": "es5",
    "module": "commonjs",
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "declaration": true,
    "sourceMap": true,
    "jsx": "react",
    "rootDirs": ["src", "stories"],
    "typeRoots": ["index.d.ts", "node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["**/__tests__/*", "**/dist/"]
}
